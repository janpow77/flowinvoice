# FlowAudit Stack Environment Configuration for Portainer
# Diese Datei wird von Portainer bei Repository-Deployments verwendet

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=flowaudit_secret

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=flowaudit_dev_secret_key_change_in_production
CHROMA_TOKEN=flowaudit_chroma_token

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# OLLAMA / LLM
# =============================================================================
OLLAMA_GPU_MEMORY_FRACTION=0.8
OLLAMA_NUM_GPU=999
OLLAMA_NUM_PARALLEL=2
OLLAMA_NUM_CTX=4096

# =============================================================================
# WORKERS
# =============================================================================
UVICORN_WORKERS=4
CELERY_CONCURRENCY=4

# =============================================================================
# PORTS (all are optional, defaults shown)
# =============================================================================
# FRONTEND_PORT=3000
# BACKEND_PORT=8000
# CHROMADB_PORT=8001
# POSTGRES_PORT=5432
# REDIS_PORT=6379
