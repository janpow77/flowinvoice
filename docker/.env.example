# FlowAudit Environment Configuration
# Kopieren Sie diese Datei nach .env und passen Sie die Werte an

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=flowaudit_secret

# =============================================================================
# SECURITY
# =============================================================================
# Wichtig: In Produktion unbedingt ändern!
SECRET_KEY=flowaudit_dev_secret_key_change_in_production

# ChromaDB Authentication Token
CHROMA_TOKEN=flowaudit_chroma_token

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO

# CORS Origins (kommagetrennt, z.B. http://localhost:3000,https://flowaudit.example.com)
# Verwenden Sie "*" nur für Entwicklung!
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# OLLAMA / LLM
# =============================================================================
# GPU Memory Fraction (0 = auto, 0.8 = 80% des GPU-Speichers)
OLLAMA_GPU_MEMORY_FRACTION=0.8

# Number of GPU layers (-1 = alle, 0 = nur CPU)
OLLAMA_NUM_GPU=999

# Parallele Anfragen
OLLAMA_NUM_PARALLEL=2

# Context Window Size
OLLAMA_NUM_CTX=4096

# Container Memory Limit
OLLAMA_CONTAINER_MEMORY=16G

# Thermal Throttle Temperature (Celsius)
THERMAL_THROTTLE_TEMP=80

# =============================================================================
# WORKERS
# =============================================================================
# Uvicorn Workers für Backend
UVICORN_WORKERS=4

# Celery Worker Concurrency
CELERY_CONCURRENCY=4

# =============================================================================
# EXTERNE LLM PROVIDER (Optional)
# =============================================================================
# OpenAI
# OPENAI_API_KEY=sk-...

# Anthropic
# ANTHROPIC_API_KEY=sk-ant-...

# Google AI
# GOOGLE_API_KEY=...
