# FlowAudit Stack Environment Configuration
# Diese Datei wird von Portainer für Stack-Deployments verwendet
# Passen Sie die Werte für Ihre Umgebung an!

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_PASSWORD=flowaudit_secret
POSTGRES_PORT=5432

# =============================================================================
# SECURITY
# =============================================================================
# Wichtig: In Produktion unbedingt ändern!
SECRET_KEY=7ded0293442f7a343cdaa146bed11c42be0e4b26ed2caeb351b056ee202489cf

# ChromaDB Authentication Token
CHROMA_TOKEN=flowaudit_chroma_token

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO

# CORS Origins (kommagetrennt)
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# PORTS
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=8020
REDIS_PORT=6379
CHROMADB_PORT=8001
OLLAMA_PORT=11434

# =============================================================================
# OLLAMA / LLM
# =============================================================================
# GPU Memory Fraction (0 = auto, 0.8 = 80% des GPU-Speichers)
OLLAMA_GPU_MEMORY_FRACTION=0.8

# Number of GPU layers (-1 = alle, 0 = nur CPU)
OLLAMA_NUM_GPU=999

# Parallele Anfragen
OLLAMA_NUM_PARALLEL=2

# Context Window Size
OLLAMA_NUM_CTX=4096

# Container Memory Limit
OLLAMA_CONTAINER_MEMORY=16G

# Thermal Throttle Temperature (Celsius)
THERMAL_THROTTLE_TEMP=80

# =============================================================================
# WORKERS
# =============================================================================
# Uvicorn Workers für Backend
UVICORN_WORKERS=4

# Celery Worker Concurrency
CELERY_CONCURRENCY=4

# =============================================================================
# EXTERNE LLM PROVIDER (Optional - auskommentieren und ausfüllen)
# =============================================================================
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=...
